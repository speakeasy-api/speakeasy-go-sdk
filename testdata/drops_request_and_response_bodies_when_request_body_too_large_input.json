{
    "name": "drops request and response bodies when request Body too large",
    "fields": {
        "max_capture_size": 10
    },
    "args": {
        "method": "POST",
        "url": "http://test.com/test",
        "headers": {
            "Content-Type": [
                "application/json"
            ]
        },
        "body": "{\"tooLarge\": \"veryLarge\"}",
        "response_status": 200,
        "response_body": "no room left for response to be captured",
        "response_headers": {
            "Content-Type": [
                "text/plain; charset=utf-8"
            ]
        }
    }
}